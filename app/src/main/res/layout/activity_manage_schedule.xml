<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradation"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ManageScheduleActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="705dp"
        android:layout_margin="24dp"
        android:background="#B3FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Add Bus Schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your bus schedule" />

        <ListView
            android:id="@+id/schedule_list_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="283dp"
            android:layout_height="315dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp">

                <TextView
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    />

                <Spinner
                    android:id="@+id/year_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/month_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/date_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:paddingHorizontal="3dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Hour"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/hour_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/add_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Add Schedule" />

    </LinearLayout>

</LinearLayout>

