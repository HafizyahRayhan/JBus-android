<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3sp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradation"
    tools:context=".RegisterRenterActivity">

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="673dp"
        android:layout_margin="24dp"
        android:background="#B3FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:background="#00F4F6FB"
            android:fadingEdge="horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleAddBus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Bus"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Add or edit bus" />

            <EditText
                android:id="@+id/bus"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:textColor="@color/black"
                android:hint="Bus name"
                android:inputType="text" />

            <EditText
                android:id="@+id/capacity"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:textColor="@color/black"
                android:hint="Capacity"
                android:inputType="number" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:textColor="@color/black"
                android:hint="Price"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Bus Type"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_directions_bus_24"
                    app:tint="@color/black" />

                <Spinner
                    android:id="@+id/bus_type_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_home_24"
                    app:tint="@color/black" />

                <Spinner
                    android:id="@+id/departure_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="Arrival"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_directions_24"
                    app:tint="@color/black" />
                <Spinner
                    android:id="@+id/arrival_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="313dp"
            android:layout_height="233dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <CheckBox
                    android:id="@+id/ac_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC" />
                <CheckBox
                    android:id="@+id/wifi_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi" />
                <CheckBox
                    android:id="@+id/toilet_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toilet" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <CheckBox
                    android:id="@+id/lcd_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LCD" />
                <CheckBox
                    android:id="@+id/coolbox_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coolbox" />
                <CheckBox
                    android:id="@+id/lunch_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp">

                <CheckBox
                    android:id="@+id/baggage_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baggage" />
                <CheckBox
                    android:id="@+id/electric_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric" />


            </LinearLayout>

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>